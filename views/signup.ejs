<%- include('./partials/head.ejs')%>

    <body>
        <%- include('./partials/header.ejs') %>
            <div class="w-[70%] mx-auto">
                <form action="" class="md:w-1/3 mx-auto shadow-md p-8 rounded-md">
                    <h1 class="text-3xl font-bold mb-4 text-gray-700">Signup</h1>
                    <div class="my-3">
                        <label for="" class="font-medium">Email</label>
                        <input type="text" placeholder="Enter your email" name="email" class="w-full border-[1px] py-[6px] px-3 my-2 outline-none">
                    </div>
                    <div class="my-3">
                        <label for="" class="font-medium">Password</label>
                        <input type="password" placeholder="Enter your password" name="password" class="w-full border-[1px] py-[6px] px-3 my-2 outline-none">
                    </div>
                    <div>
                        <button class="bg-yellow-500 px-4 py-2 rounded-md font-medium">Signup</button>
                    </div>
                </form>
            </div>

            <script>
                const form = document.querySelector('form');
                form.addEventListener('submit', (e)=>{
                    e.preventDefault();
                    const email = form.email.value;
                    const password = form.password.value;

                    console.log(email, password)
                })
            </script>
    </body>

    </html>